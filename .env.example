# Ejemplo de configuración de variables de entorno
# Copia este archivo como .env.production y ajusta los valores

# Configuración básica
DEBUG=False
SECRET_KEY=your-production-secret-key-change-this-immediately

# Base de datos PostgreSQL
DATABASE_URL=postgres://user:password@host:port/database

# Dominios permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,173.212.208.35,parqueadero.sufactura.store,*.sufactura.store

# CSRF Trusted Origins (separados por comas)
CSRF_TRUSTED_ORIGINS=http://173.212.208.35,https://parqueadero.sufactura.store

# Configuración de seguridad para producción
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Configuración regional
USE_TZ=True
TIME_ZONE=America/Bogota
LANGUAGE_CODE=es-co

# Configuración del superusuario (para Docker)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=Admin123